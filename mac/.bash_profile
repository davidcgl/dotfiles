# custom prompt
export PS1='[\[\033[00;31m\]\u\[\033[00;37m\]] \$ '

# for Homebrew
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/share/python:$PATH

# change ls color
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagaced

# change grep color
export GREP_OPTIONS='--color=auto'

# aliases
alias ll='ls -l'
