if [[ -e $HOME/.at_google ]]; then
  source $HOME/.zshrc_google
else
  source $HOME/.zshrc_home
fi

alias ta="tmux attach"
alias tl="tmux list-sessions"
alias urldecode="python -c \"import sys, urllib as ul; \
  print ul.unquote_plus(sys.argv[1])\""
alias urlencode="python -c \"import sys, urllib as ul; \
  print ul.quote_plus(sys.argv[1])\""

# Protect myself against myself.
alias realrm="$(which rm)"

rm() {
  if [[ $1 =~ '^-.*r.*' ]]; then
    for file in ${@:2}; do
      # Only confirm if we are removing a directory.
      if [[ -d $file ]]; then
        local confirm=''
        vared -p "Delete $file and subdirs [yn]: " confirm
        if [[ $confirm == 'y' || $confirm == 'Y' ]]; then
          realrm $1 $file
        fi
      else
        realrm $1 $file
      fi
    done
  else
    realrm "$@"
  fi
}

# Fuzzy Finder
# https://github.com/junegunn/fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export FZF_DEFAULT_COMMAND='ag -l --hidden --nogroup -l -g ""'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

